@model HRP.Models.KentModel
@{
    ViewBag.Title = "KentMobilyaDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div id="banner-area" style="width:80%; margin:auto; margin-top:-25px">
        <img class="foto" src="~/Content/images/slider/anaresimler/kentmobilya.jpg" alt="" style="width: 100%;
        height: auto;
        object-fit: cover;
        object-position: 20% 15%" />
        <div class="parallax-overlay"></div>
        <!-- Subpage title start -->
        <div class="banner-title-content yazi">
            <div class="text-center">
                <h2 class="yazi">URBAN FURNITURE</h2>
            </div>
        </div><!-- Subpage title end -->
    </div><!-- Banner area end -->
</div>
<!-- Portfolio item start -->
<div class="container">
    <section id="portfolio-item" style="width:80% !important; margin:auto!important">

        <!-- Portfolio item row start -->
        <div class="row">
            <!-- Portfolio item slider start -->
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12" style="margin-top:50px">
                <div class="portfolio-slider">
                    <div class="flexportfolio flexslider">
                        <ul class="slides">
                            @foreach (var item in Model.Images)
                            {
                                <li><img src="~/Content/images/HRP/KentMobilyalari/@item.Klasor/@item.ImagePath" alt=""></li>
                            }

                            @*<li><img src="~/Content/images/HRP/bahcemobilyaları/bm-ms-001/bm-ms-001-3satine-600x600.jpg" alt="" /></li>
                                <li><img src="~/Content/images/HRP/bahcemobilyaları/bm-ms-001/bm-ms-001-ölçüleri-600x600.jpg" alt="" /></li>
                                <li><img src="~/Content/images/HRP/bahcemobilyaları/bm-ms-001/bm-ms-001-600x600.jpg" alt="" /></li>*@
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Portfolio item slider end -->
            <!-- sidebar start -->
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <div class="sidebar">
                    <div class="portfolio-desc" style="margin-top:20px">
                        <h3 class="widget-title">@Model.UrunAdi</h3>
                        <p>
                            <table class="table table-bordered table-responsive" border="1" cellpadding="10" cellspacing="10">
                                <tr>
                                    <th>Product Name</th>
                                    <td>@Model.UrunAdi</td>
                                </tr>
                                <tr>
                                    <th>Width </th>
                                    <td>@Model.En</td>
                                </tr>
                                <tr>
                                    <th>Length </th>
                                    <td>@Model.Boy</td>
                                </tr>
                                <tr>
                                    <th>Height </th>
                                    <td>@Model.Yukseklik</td>
                                </tr>
                                <tr>
                                    <th>Material Options </th>
                                    <td>@Model.Malzeme</td>
                                </tr>
                                <tr>
                                    <th>Colour Options </th>
                                    <td>@Model.Renk</td>
                                </tr>
                                <tr>
                                    <th>Surface Type Options</th>
                                    <td>@Model.Yuzeytipi</td>
                                </tr>
                                <tr>
                                    <th>Cleaning and Maintenance </th>
                                    <td>@Model.TemizlikveBakim</td>
                                </tr>
                            </table>
                        </p>

                    </div>
                </div>
            </div>
            <!-- sidebar end -->
        </div><!-- Portfolio item row end -->
    </section><!-- Portfolio item end -->
</div><!-- Container end -->
